<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/soal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1. Manakah kota dibawah iniyang merupakan ibu kota provinsi?"
        android:textColor="#FF000000" />

    <CheckBox
        android:id="@+id/check1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/soal"
        android:text="Bandung"
        android:textColor="	#FF000000" />

    <CheckBox
        android:id="@+id/check2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/check1"
        android:text="Bogor"
        android:textColor="#FF000000" />

    <CheckBox
        android:id="@+id/check3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/check2"
        android:text="Banjarmasin"
        android:textColor="#FF000000" />

    <CheckBox
        android:id="@+id/check4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/check3"
        android:text="Bontang"
        android:textColor="#FF000000" />

    <Button
        android:id="@+id/btn_nilai"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/check4"
        android:text="Periksa Nilai"
        android:onClick="nilai"/>

    <TextView
        android:id="@+id/hasil"
        android:text="Nilai Anda"
        android:layout_below="@+id/btn_nilai"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <TextView
        android:id="@+id/output"
        android:layout_below="@id/btn_nilai"
        android:layout_toRightOf="@id/hasil"
        android:layout_width="50dp"
        android:layout_height="wrap_content" />

</RelativeLayout>